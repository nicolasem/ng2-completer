{
    "compilerOptions": {
        "module": "es2015",
        "target": "es5",
        "moduleResolution": "node",
        "sourceMap": false,
        "declaration": true,
        "removeComments": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noImplicitAny": true,
        "listFiles": false,
        "noLib": false,
        "outDir": ".tmp/es5",
        "forceConsistentCasingInFileName": true,
        "noUnusedLocals": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2015",
            "dom"
        ],
        "strictNullChecks": true,
        "noStrictGenericChecks": true,
        "skipLibCheck": true
    },
    "exclude": [
        "node_modules",
        "bundles",
        "dist"
    ] 
}